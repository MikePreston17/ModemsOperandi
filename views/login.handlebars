<div class="container">
    <div class="card m-5 grey lighten-4">
        <div class="card-body">
            <form action="/login" method="post" id="login">
                <p class="h4 text-center py-4">Login</p>
                <div class="md-form">
                    <i class="fa fa-envelope prefix grey-text"></i>
                    <input type="email" id="email" class="form-control" name="email">
                    <label for="email" class="font-weight-light">Your email</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" id="password" class="form-control" name="password">
                    <label for="password" class="font-weight-light">Your password</label>
                </div>
                

                <div class="text-center py-4 mt-3">
                    <button class="btn peach-gradient text-dark btn-block" type="submit">Login</button>
                </div>
            </form>
            <p>Not a member? <a href="{{signup}}">Register</a></p>
            <p><a href="{{home}}">Home</a></p>
        </div>
    </div>
</div>